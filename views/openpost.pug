extends layout
block body
    <body id="alert" onload="postColor(#{post.id})">
    <div id='postbox'>
        <div id='date'>
            small=post.createdAt
        </div>
        <div id='title'>
            span= post.title
        </div>
        br
        <div id='content'>
            span=post.content
        </div>
    </div>
    input(type="hidden" name="postid" value=post.id)
    input(type="hidden" id="color"+post.id value=post.color)
    <a href="/post/edit/#{post.id}"><button>Edit</button></a>
    <a href="/post/delete/#{post.id}"><button>Delete</button></a>
    hr
    <a href="/post"><button>< Posts</button></a>
    head
        style
            include ../layouts/posts.css
block scripts
    script(src="/../scripts/postScripts.js") 